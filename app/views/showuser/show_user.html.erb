<% if current_user.admin? %>
    <% if @user.active? %>
        <div id='dashboard'>
            <%= render 'show_user_dashboard' %>
        </div>
        <% unless @user.group_id.present? %>
            <script>
                $(document).ready(
                    function() {
                    setInterval(function() {
                        $.ajax({
                            url: '/show_user.js',
                            method: 'POST',
                            cache: false,
                            beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))}
                        });
                    }, 10000);
                });
            </script>
        <% end %>
    <% end %>
<% end %>