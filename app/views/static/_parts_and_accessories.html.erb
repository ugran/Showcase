<div class="container">
  <div style="margin-top:30px; letter-spacing:3px; font-size:24px; width:100%; text-align:center">Parts & Accessories</div>
  <div class="row" style="margin-bottom:80px">
    <% if @products_all.present? %>
      <% @products_all.where(category: 3).each do |t| %>
        <div class="col-md-3" style="text-align:center; margin-top:30px; padding-left:15px; padding-right:15px">
          <div class="product"  style="border-radius: 5px 5px 5px 5px; -moz-border-radius: 5px 5px 5px 5px; -webkit-border-radius: 5px 5px 5px 5px; border: 1px solid #000000; cursor:pointer" data-toggle="modal" data-target="#product_modal_<%= t.id %>">
            <%= image_tag t.image(:medium), style: "height:150px" %>
            <div style="margin-top:10px; font-size:18px"><%= t.name %></div>
          </div>
        </div>
        <div class="modal fade" id="product_modal_<%= t.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <div class="modal-title" style="font-size:18px; text-align:center; width:100%; font-weight:bold"><%= t.name %></div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div style="text-align:center">
                  <%= image_tag t.image(:medium), style: "height:250px" %>
                </div>
                <div style="font-size:24px; font-weight:bold; margin-bottom:10px">Description:</div>
                <div><%= t.description.html_safe %></div>
                <div style="font-size:24px; font-weight:bold; margin-bottom:10px">Specifications:</div>
                <div><%= t.specifications.html_safe %></div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>