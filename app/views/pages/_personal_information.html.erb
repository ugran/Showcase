<% if current_user.personal_information.present? %>
  <% if current_user.personal_information.status == true %>
    <div class="container" style="margin-top:50px; text-align:center">
      <h4>Your account information is saved. We will contact you soon.</h4>
    </div>
  <% end %>
<% else %>
  <div class="container" style="margin-top:20px; padding-left:350px; padding-right:350px">
    <h4 style="margin-bottom:10px">Please, fill in the following form!</h4>
    <%= form_with(url: dashboard_path, local: true) do |f| %>
      <%= hidden_field_tag :personal_information, 1 %>
      <div class="form-group">
        <%= f.text_field :first_name, class: "form-control", placeholder: 'First Name', required: true %>
      </div>
      <div class="form-group">
        <%= f.text_field :last_name, class: "form-control", placeholder: 'Last Name', required: true %>
      </div>
      <div class="form-group">
        <%= f.text_field :phone_number, class: "form-control", placeholder: 'Phone Number', required: true %>
      </div>
      <div class="form-group">
        <%= f.text_field :address, class: "form-control", placeholder: 'Address', required: true %>
      </div>
      <div class="form-group">
        <%= f.text_field :country, class: "form-control", placeholder: 'Country', required: true %>
      </div>
      <div class="form-group">
        <div style="margin-bottom:5px">
          Comment (Optional)
        </div>
        <%= f.text_area :comment, class: "form-control", placeholder: 'Comment', id: 'ck_comment' %>
      </div>
      <%= f.submit('Submit', class:'btn btn-dark') %>
    <% end %>
  </div>
<% end %>

<script>
  $(document).ready(function(){
    ClassicEditor.create( document.querySelector('#ck_comment')).catch( error => {
      console.error( error );
    });
  });
</script>
