<div class='container'>
    <p style='margin-top:20px; font-weight:bold'>NEW MODEL</p>
    <%= form_with( url: admin_path, local: true) do |f| %>
        <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :speed %><br />
            <%= f.number_field :speed, class: "form-control", step: :any %>
        </div>
        <div class="form-group">
            <%= f.label :unit %><br />
            <%= f.select :unit, options_for_select(['H','KH','MH','GH','TH']), {} ,class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :algo %><br />
            <%= f.select :algo, options_for_select(Nsalgo.pluck(:name)), {} ,class: 'form-control' %>
        </div>
        <%= f.submit('Submit', class:'btn btn-dark') %>
    <% end %>
    <p style='margin-top:20px; font-weight:bold'>NEW ALGO</p>
    <%= form_with( url: admin_path, local: true) do |f| %>
        <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :number %><br />
            <%= f.number_field :number, class: "form-control", step: :any %>
        </div>
        <%= f.submit('Submit', class:'btn btn-dark') %>
    <% end %>
    <div class='row' style='margin-top:30px;'>
        <div class='col-md-8'>
            <table class='table'>
                <thead>
                    <th>Name</th>
                    <th>Speed</th>
                    <th>Unit</th>
                    <th>Algo</th>
                </thead>
                <tbody>
                    <% @miner_models.each do |t| %>
                        <tr>
                            <td><%= t.name %></td>
                            <th><%= t.speed %></th>
                            <th><%= t.unit %></th>
                            <th><%= t.algo %></th>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class='col-md-4'>
            <table class='table'>
                <thead>
                    <th>#</th>
                    <th>Name</th>
                </thead>
                <tbody>
                    <% @nsalgos.order(:number).each do |t| %>
                        <tr>
                            <td><%= t.number %></td>
                            <th><%= t.name %></th>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

